$HTTP["host"] == "{{lgf_host}}" {
  var.server_name = "{{lgf_server_name}}"

  server.name = server_name
  server.document-root = server_root + "/html/{{lgf_server_name}}/{{lgf_server_name}}"


$HTTP["url"] !~ "^/uploads/" {
  proxy.server = ( "" => (
                   ( "host" => "127.0.0.1", "port" => {{lgf_gunicorn_port}} )
                 ) )
}
$HTTP["url"] =~ "^/{{lgf_media_dir}}" {

        alias.url = (
            "/{{lgf_media_dir}}" => server.document-root + "/{{lgf_media_dir}}"
        )

}
}
